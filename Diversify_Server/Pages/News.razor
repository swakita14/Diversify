@page "/news"

<h3>News</h3>

<EditForm Model=@searchModel OnValidSubmit="@OnValidFormSubmission">
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Company Name" @bind="searchModel.CompanyName" />
        </div>
        <div class="col">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </div>
</EditForm>
<br />

@if (_newsIfFound)
{
    <NewsResult SearchString="@searchModel.CompanyName"></NewsResult>
}




@code {

    private bool _newsIfFound = false;
    StockNewsSearchModel searchModel = new StockNewsSearchModel();


    private void OnValidFormSubmission()
    {
        _newsIfFound = true;
    }

}
